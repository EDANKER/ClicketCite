@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ClickerSite</title>
    <link rel="stylesheet" href="~/css/Main.css" asp-append-version="true"/>
</head>
<body>
<header class="header">
    <nav class="navFlex">
        <a class="Login" onclick="ClickLogin()">Вход</a>
        <a class="Regist" onclick="ClickRegist()">Регистрация</a>
    </nav>
</header>
<main>
    <form method="post" asp-controller="Autorized" asp-action="Registartion">
        <nav class="Regist_Active" id="Regist_Active">
            <input id="nameInput" type="text" name="name" placeholder="Логин"/>
            <input id="mailInput" type="text" name="mail" placeholder="Почта"/>
            <input id="passInput" type="password" name="pass" placeholder="Пароль"/>
            <input id="replace_PassInput" type="password" name="replcePass" placeholder="Повторить пароль"/>
            <div asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="PostRegist" id="PostRegist">Создать</button>
        </nav>
    </form>
    <form method="post" asp-controller="Autorized" asp-action="Login">
        <nav class="Login_Active" id="Login_Active">
            <input type="text" name="name" placeholder="Логин"/>
            <input type="password" name="pass" placeholder="Пароль"/>
            <div asp-validation-summary="ModelOnly"></div>
            <button class="PostLogin">Войти</button>
        </nav>
    </form>
    <div class="flexBox">
        <img id="img_box" src="img/pngwing.com (1).png" alt=""/>
        <img src="img/pngwing.com22.png" alt=""/>
        <nav class="buttonFlex">
            <button class="button_conclusion" onclick="ClickBox()" style="color: white">получить деньги</button>
            <button class="button_advertisement" style="color: white">смотреть рекламу</button>
        </nav>
    </div>
</main>
<footer>

</footer>
</body>
<script src="js/Regist.js"></script>
</html>